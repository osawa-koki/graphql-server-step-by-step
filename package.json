{
  "name": "graphql-server-step-by-step",
  "description": "🥜🥜🥜 GraphQLサーバの構築を、ステップバイステップで進めていく！",
  "repository": "https://github.com/osawa-koki/graphql-server-step-by-step.git",
  "author": "osawa-koki <koki@osawa.dev>",
  "license": "Apache-2.0",
  "private": false,
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon --ext ts --exec ts-node --esm ./index.ts",
    "start": "ts-node ./index.ts",
    "type-check": "tsc --noEmit",
    "codegen": "graphql-codegen --config codegen.ts"
  },
  "dependencies": {
    "@apollo/server": "^4.9.1",
    "@graphql-tools/graphql-file-loader": "^8.0.0",
    "@graphql-tools/load": "^8.0.0",
    "@graphql-tools/schema": "^10.0.0",
    "graphql": "^16.8.0",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/typescript": "4.0.1",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "4.0.1",
    "@types/node": "^20.5.9",
    "nodemon": "^3.0.1",
    "typescript": "^5.1.6",
    "@graphql-codegen/introspection": "4.0.0"
  }
}